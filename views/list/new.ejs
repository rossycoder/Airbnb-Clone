<% layout("/layouts/bilopret") -%>
<div class="row">
    <div class="col-8 offset-2">
        <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
            <h5>Create Listings</h5>
            <div class="mb-2">
                <label for="title" class="form-lable">Title</label>
                <input name="lists[title]" placeholder="enter your title" type="text" class="form-control" required />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-2">
                <label for="description" class="form-lable">Description</label>
                <textarea name="lists[description]" placeholder="description" class="form-control" required></textarea>
                <div class="invalid-feedback">please Enter short description!</div>
            </div>
            <div class="mb-2">
                <label for="image" class="form-lable">Image upload</label>
                <input name="lists[image]" type="file" class="form-control" required/>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-lable">Price</label>
                    <input name="lists[price]" placeholder="enter Price" class="form-control" required/>
                    <div class="invalid-feedback">please enter a valid Price!</div>   
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-lable">Country</label>
                    <input name="lists[country]" placeholder="enter Country" class="form-control" required/>
                    <div class="invalid-feedback">please enter a valid country</div>     
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-lable">Location</label>
                <input name="lists[location]" placeholder="enter your location" class="form-control" required />
                <div class="invalid-feedback">please enter a valid-location</div>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select name="lists[category]" class="form-control" required>
                    <option value="" disabled selected>Select a category</option>
                    <option value="Trending">Trending</option>
                    <option value="Top cities">Top cities</option>
                    <option value="Design">Design</option>
                    <option value="Swimming pools">Swimming pools</option>
                    <option value="Tree Houses">Tree Houses</option>
                    <option value="Cabins">Cabins</option>
                    <option value="New">New</option>
                </select>
                <div class="invalid-feedback">Please select a category.</div>
            </div>
            <button class="btn btn-danger">add</button>
        </form>
    </div>
</div>
